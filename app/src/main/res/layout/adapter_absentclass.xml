<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content" >


    <TextView
        android:id="@+id/adapter_absent_name"
        android:layout_width="200dp"
        android:layout_height="64dp"
        android:text="TextView"
        android:textSize="20dp" />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:text="MC"
            android:layout_toEndOf="@+id/adapter_absent_name"
            android:onClick="onCheckboxClicked"/>

    <CheckBox
        android:id="@+id/checkBoxLateToClass"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:text="Late To Class"
        android:layout_below="@+id/checkBox"
        android:layout_toEndOf="@+id/adapter_absent_name"
        android:onClick="onCheckboxClicked"/>

    <CheckBox
        android:id="@+id/checkBoxOtherReason"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:text="Other Reason"
        android:layout_below="@+id/checkBoxLateToClass"
        android:layout_toEndOf="@+id/adapter_absent_name"
        android:onClick="onCheckboxClicked"/>










</RelativeLayout>